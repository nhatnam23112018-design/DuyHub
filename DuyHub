TimerLabel.TextSize = 20
TimerLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TimerLabel.Visible = false

-- Hàm thông báo
local function sendNotification(title, text, duration)
    StarterGui:SetCore("SendNotification", {
        Title = title,
        Text = text,
        Duration = duration or 3
    })
end

-- Khi bấm bắt đầu
StartButton.MouseButton1Click:Connect(function()
    Frame.Visible = false -- ẩn menu
    TimerLabel.Visible = true

    local totalTime = 300 -- 5 phút = 300 giây

    for t = totalTime, 1, -1 do
        task.wait(1)

        -- Update đồng hồ
        local minutes = math.floor(t / 60)
        local seconds = t % 60
        TimerLabel.Text = string.format("Thời gian: %02d:%02d", minutes, seconds)

        -- Mỗi 30 giây thông báo
        if t % 30 == 0 and t ~= totalTime then
            sendNotification("Thông báo", "30s đã hết / 30 seconds passed", 3)
        end

        -- Khi hết giờ
        if t == 1 then
            sendNotification("RESET", "5 phút đã hết! Reset nhân vật...", 5)
            task.wait(1)
            player:LoadCharacter()
            TimerLabel.Visible = false
        end
    end
end)
   -- The function that takes place when the button is pressed
   end,
})
